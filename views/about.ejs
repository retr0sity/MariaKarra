    <style>
        /* Custom styles for the header and about section */
        .hero-section {
            position: relative;
            height: 70vh;
            background-image: url('images/kremala.jpg');
            background-size: cover;
            background-position: center;
            color: white;
            box-shadow: 0 4px 6px rgba(0, 0, 0, 0.4);
        }
        .hero-section::before {
            content: "";
            position: absolute;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            background: rgba(0, 0, 0, 0.5);
            z-index: 1;
        }
        .hero-content {
            position: relative;
            z-index: 2;
            text-align: left;
            top: 10%;
            left: 14.9%;
            max-width: 90%; /* Ensure responsiveness for smaller screens */
            
            padding: 1rem; /* Add padding for spacing */
            
            border-radius: 10px;
            color: white;
        }

        .hero-content h1 {
            font-size: 2.5rem;
            margin-bottom: 1rem;
            font-weight: 700;
        }

        .hero-content p {
            font-size: 1.2rem;
            line-height: 1.6;
            margin-bottom: 1.5rem;
        }

        /* Add media queries for better responsiveness */
        @media (min-width: 768px) {
            .hero-content {
                max-width: 60%; /* Increase width on medium screens */
            }
            .hero-content h1 {
                font-size: 3rem;
            }
            .hero-content p {
                font-size: 1.5rem;
            }
        }

@media (min-width: 1200px) {
    .hero-content {
        max-width: 50%; /* Larger width on larger screens */
    }
}
        .link-section {
            text-align: center;
            margin-top: 2rem;
        }
        .link-section a {
            margin: 0 15px;
            font-weight: bold;
            color: black;
            text-decoration: none;
            cursor: pointer;
            position: relative;
        }
        .link-section a::before {
            content: '';
            position: absolute;
            bottom: -2px;
            left: 50%;
            width: 0;
            height: 2px;
            background-color: black;
            transition: width 0.3s ease, left 0.3s ease;
        }
        .link-section a:hover::before, .link-section a.active::before {
            width: 100%;
            left: 0;
        }
        .content-section {
            margin-top: 2rem;
            text-align: left;
        }
        .content-section h2 {
            margin-bottom: 1.5rem;
        }
        .content-section .row {
            justify-content: center;
        }
        .content-section .col-md-6 {
            margin-bottom: 2rem;
        }
        .content-section ul {
            list-style-type: none;
            padding: 0;
        }
        .content-section ul li {
            margin-bottom: 0.5rem;
        }
        .publication-item {
            padding: 1.5rem;
            margin-bottom: 1.5rem;
            background-color: #f8f9fa; /* Light gray background */
            border: 1px solid #dee2e6; /* Border for a professional look */
            border-radius: 8px;
        }

        .publication-item h5 {
            margin-bottom: 0.5rem;
            font-weight: 600; /* Slightly bolder for emphasis */
        }

        .publication-item p {
            margin-bottom: 0.25rem;
            line-height: 1.6;
        }

        .publication-item .text-muted {
            font-size: 0.9rem;
            display: block;
            margin-bottom: 0.5rem;
        }

        .publication-item .btn {
            font-size: 0.85rem;
        }
    </style>
</head>
