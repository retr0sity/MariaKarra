<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Maria Karra</title>
    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <!-- Custom CSS -->
    <link rel="stylesheet" href="css/styles.css">
    <style>
        .work-title {
            font-size: 3.5rem;
            color: black;
            text-shadow: 2px 2px 4px rgba(0, 0, 0, 0.5);
        }
        .link-section {
            text-align: center;
            margin: 2rem;
        }
        .link-section a {
            margin: 0 20px;
            font-weight: bold;
            color: black;
            text-decoration: none;
            cursor: pointer;
            position: relative;
        }
        .link-section a::before {
            content: '';
            position: absolute;
            bottom: -2px;
            left: 50%;
            width: 0;
            height: 2.5px;
            background-color: black;
            transition: width 0.3s ease, left 0.3s ease;
        }
        .link-section a:hover::before, .link-section a.active::before {
            width: 100%;
            left: 0;
        }
    </style>
</head>
<body class="bg-light">
     <!-- Background Image wrapper -->
    <div class="container-fluid p-0" style="object-fit: cover; height: 50vh; background-image: linear-gradient(rgba(4,9,30,0.4),rgba(4,9,30,0.4) ) , url('images/hero-image-work-page.JPG'); background-position: center; background-size: cover; background-repeat: no-repeat;  box-shadow: 0 4px 6px rgba(0, 0, 0, 0.4);">
        
        <!-- Include Header -->
        <%- include("partials/header.ejs") %>

        <!-- Centered WORK heading -->
        <div class="d-flex justify-content-center align-items-center" style="height: 80%; width: 100%;">
            <h3 class="fw-bold work-title">WORK</h3>
        </div>
    </div>

    <!-- Links Section -->
    <div class="link-section">
        <a id="art">Art</a>
        <a id="game-art">Game Art</a>
        <a id="music">Music</a>
    </div>

     <!-- Image Gallery -->
     <div class="container mt-4">
        <div class="row">
            <div class="col-md-4 mb-4">
                <img src="images/draft_webpage_lower_resolution.jpg" class="img-fluid img-shadow" alt="Gallery Image 1">
            </div>
            <div class="col-md-4 mb-4">
                <img src="images/draft_webpage_lower_resolution.jpg" class="img-fluid img-shadow" alt="Gallery Image 2">
            </div>
            <div class="col-md-4 mb-4">
                <img src="images/draft_webpage_lower_resolution.jpg" class="img-fluid img-shadow" alt="Gallery Image 3">
            </div>
            <div class="col-md-4 mb-4">
                <img src="images/draft_webpage_lower_resolution.jpg" class="img-fluid img-shadow" alt="Gallery Image 4">
            </div>
            <div class="col-md-4 mb-4">
                <img src="images/draft_webpage_lower_resolution.jpg" class="img-fluid img-shadow" alt="Gallery Image 5">
            </div>
            <div class="col-md-4 mb-4">
                <img src="images/draft_webpage_lower_resolution.jpg" class="img-fluid img-shadow" alt="Gallery Image 6">
            </div>
        </div>
    </div>

    <!-- Include Footer -->
    <%- include("partials/footer.ejs") %>

    <!-- Bootstrap Icons -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.css" rel="stylesheet">
    <!-- Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script src="js/app.js"></script>
</body>
</html>