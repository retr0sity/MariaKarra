<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Maria Karra</title>
    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>
        .nav-link {
            position: relative;
            overflow: hidden;
        }
        .nav-link::before {
            content: '';
            position: absolute;
            bottom: 0;
            left: -100%;
            width: 100%;
            height: 4px;
            background-color: white;
            transition: left 0.5s ease-in-out;
        }
        .nav-link:hover::before {
            left: 0;
        }
        .footer-icon {
            transition: transform 0.2s ease-in-out;
        }
        .footer-icon:hover {
            transform: scale(1.5);
        }
        .navbar-shadow {
            box-shadow: 0 4px 6px rgba(0, 0, 0, 0.2);
            transition: box-shadow 0.3s ease-in-out;
        }
        .navbar-shadow-thick {
            box-shadow: 0 4px 6px rgba(0, 0, 0, 0.4);
            transition: box-shadow 0.3s ease-in-out;
        }
        #navbar {
            transition: box-shadow 0.3s ease-in-out;
        }
    </style>
</head>
<body class="bg-light">
     <!-- Background Image wrapper-->
    <div class="container-fluid p-0 img-fluid w-100" style="object-fit: cover; height: 100vh; background-image: url('images/draft_webpage_lower_resolution.JPG'); background-position: center; background-size: cover; background-repeat: no-repeat;">
        
         <!-- Header Section -->
        <header id="navbar" class="text-white py-4 sticky-top navbar-shadow" style="background: linear-gradient(to bottom, #A17C2A 50%, rgba(161, 124, 42, 0.3) 100%);">
            <div class="container d-flex justify-content-between align-items-center">
                <h1 class="h4 mb-0">Maria Karra</h1>
                <nav>
                    <ul class="nav">
                        <li class="nav-item"><a href="#" class="nav-link text-white fs-5">Home</a></li>
                        <li class="nav-item"><a href="#" class="nav-link text-white fs-5">About</a></li>
                        <li class="nav-item"><a href="#" class="nav-link text-white fs-5">Work</a></li>
                    </ul>
                </nav>
                <div>
                    <a href="#" class="text-white mx-2 fs-5"><i class="bi bi-instagram"></i></a>
                    <a href="#" class="text-white mx-2 fs-5"><i class="bi bi-facebook"></i></a>
                </div>
            </div>
        </header>

    </div>

    <!-- Footer Section -->
    <footer class="text-white py-3" style="background-color: #A17C2A;">
        <div class="container d-flex flex-column align-items-center">
            <p class="mb-1 fs-7">Maria Karra &copy; 2024</p>
            <div class="d-flex">
                <a href="#" class="text-white mx-5 fs-4 footer-icon"><i class="bi bi-envelope"></i></a>
                <a href="#" class="text-white mx-5 fs-4 footer-icon"><i class="bi bi-instagram"></i></a>
                <a href="#" class="text-white mx-5 fs-4 footer-icon"><i class="bi bi-spotify"></i></a>
                <a href="#" class="text-white mx-5 fs-4 footer-icon"><i class="bi bi-apple"></i></a>
                <a href="#" class="text-white mx-5 fs-4 footer-icon"><i class="bi bi-facebook"></i></a>
            </div>
        </div>
    </footer>

    <!-- Bootstrap Icons -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.css" rel="stylesheet">
    <!-- Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script>
        window.addEventListener('scroll', function() {
            const navbar = document.getElementById('navbar');
            if (window.scrollY > 50) {
                navbar.classList.remove('navbar-shadow');
                navbar.classList.add('navbar-shadow-thick');
            } else {
                navbar.classList.add('navbar-shadow');
                navbar.classList.remove('navbar-shadow-thick');
            }
        });
    </script>
</body>
</html>
